version: "3.9"

services:
  mcp:
    build: .
    container_name: mcp_server
    ports:
      - "8000:8000"
      - "5678:5678"
    env_file:
      - .env
    depends_on:
      - ollama

  ollama:
    image: ollama/ollama:latest
    container_name: ollama
    ports:
      - "11434:11434"
    env_file:
      - .env
    volumes:
      - "${GIT_PATH}/ollama_data:/root/.ollama"
